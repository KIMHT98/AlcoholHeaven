<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.alcohol.model.dao.AlcoholDao">

<select id="search" resultType="Alcohol" parameterType="SearchCondition">
	SELECT * FROM alcohol
	<if test="key != 'none'">
			WHERE ${key} LIKE CONCAT('%', #{word}, '%')
	</if>
</select>

<select id="selectAlcohol" resultType="Alcohol" parameterType="String">
	SELECT * FROM alcohol
	WHERE region = #{region}
</select>

<select id="selectOne" resultType="Alcohol" parameterType="String">
	SELECT * FROM alcohol WHERE name = #{name};
</select>


<insert id="insertAlcohol" parameterType="Alcohol">
    INSERT INTO alcohol (name
        <if test="detailRegion != null">, detailRegion</if>
        <if test="kindOf != null">, kindOf</if>
        <if test="content != null">, content</if>
        , region
    )
    VALUES (#{name}
        <if test="detailRegion != null">, #{detailRegion}</if>
        <if test="kindOf != null">, #{kindOf}</if>
        <if test="content != null">, #{content}</if>
        , #{region}
    );
</insert>

<delete id="deleteAlcohol" parameterType="String">
	DELETE FROM alcohol
	WHERE name = #{name};
</delete>

<update id="updateAlcohol" parameterType="Alcohol">
	UPDATE alcohol
	SET name = #{name}, detailRegion = #{detailRegion}, kindOf = #{kindOf}, content = #{content},
	region = #{region};
</update>

</mapper>
