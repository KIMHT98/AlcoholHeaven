<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.alcohol.model.dao.FoodDao">

<select id="search" resultType="Food" parameterType="SearchCondition">
	SELECT * FROM food
	<if test="key != 'none'">
			WHERE ${key} LIKE CONCAT('%', #{word}, '%')
	</if>
</select>

<!-- 지역 / 메뉴 / 어울리는 술 -->

<select id="selectOne" resultType="Food" parameterType="int">
	SELECT * FROM food WHERE id = #{id};
</select>

<select id="searchRegion" resultType="Food" parameterType="String" >
	SELECT * FROM food WHERE region LIKE CONCAT('%', #{region}, '%');
</select>

<select id="searchMenu" resultType="Food" parameterType="String">
	SELECT * FROM food WHERE menu LIKE CONCAT('%', #{menu}, '%');
</select>

